<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../partials/head') -%>
  <title>Home</title>
</head>

<body>
  <!-- header -->
  <%- include('../../partials/header') -%>
  <!-- end header -->

  <!-- main -->
  <main class="container my-5">
    <% if (todo) { %>
    <h1 class="my-4">To do detail</h1>
    <div class="mb-5">
      <p><span class="font-weight-bold">Name: </span><%= todo.name %></p>
      <p><span class="font-weight-bold">Description: </span><%= todo.description %></p>
      <p><span class="font-weight-bold">Expired date: </span><%= todo.expiredDate.toDateString() %></p>
    </div>
      <a href="/todos" type="button" class="btn btn-outline-primary">Back to List</a>
    <% } else { %>
    <div class="text-center">
      <h2 class="mb-3">Opps! To do not found</h3>
        <p>Sorry! Your to do might be removed</p>
        <a href="/todos" type="button" class="btn btn-primary">Back to List</a>
    </div>
    <% } %>
  </main>
  <!-- end main -->

  <!-- footer -->
  <%- include('../../partials/footer') -%>
  <!-- end footer -->

  <!-- script -->
  <%- include('../../partials/script') -%>
  <!-- end script -->
</body>

</html>